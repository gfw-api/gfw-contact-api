{
  "name": "gfw-contact-api",
  "version": "1.1.1",
  "description": "Global forest watch - Contact API",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc ts-mocha -b --project tsconfig.json -r tsconfig-paths/register --timeout 20000 'test/**/*.ts' --exit",
    "test": "ts-mocha -b --project tsconfig.json -r tsconfig-paths/register --timeout 20000 'test/**/*.ts' --exit",
    "start": "ts-node --files --project tsconfig.json -r tsconfig-paths/register src/index.ts",
    "watch": "ts-node-dev --respawn --transpile-only --files --project tsconfig.json -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gfw-api/gfw-contact-api.git"
  },
  "keywords": [
    "gfw",
    "api",
    "microservice",
    "node",
    "javascript",
    "koa"
  ],
  "author": {
    "name": "Vizzuality",
    "email": "hello@vizzuality.com",
    "url": "http://vizzuality.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gfw-api/gfw-contact-api/issues"
  },
  "engines": {
    "node": "~18.14"
  },
  "homepage": "https://github.com/gfw-api/gfw-contact-api#readme",
  "dependencies": {
    "bunyan": "^1.8.15",
    "config": "^3.3.9",
    "google-spreadsheet": "^3.3.0",
    "jsonapi-serializer": "^3.6.7",
    "koa": "^2.14.1",
    "koa-body": "^4.2.0",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^12.0.0",
    "koa-simple-healthcheck": "^0.0.1",
    "redis": "^4.6.5",
    "rw-api-microservice-node": "^4.0.7",
    "typescript": "^4.9.5",
    "uuid": "^9.0.0",
    "vizz.async-client": "^2.0.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/chai": "^4.3.4",
    "@types/chai-datetime": "^0.0.37",
    "@types/chai-http": "^4.2.0",
    "@types/config": "^3.3.0",
    "@types/google-spreadsheet": "^3.3.1",
    "@types/jsonapi-serializer": "^3.6.5",
    "@types/koa": "^2.13.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-mount": "^4.0.2",
    "@types/koa-router": "^7.4.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.2",
    "@types/sinon": "^10.0.13",
    "@types/sparkpost": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "chai": "^4.3.7",
    "chai-datetime": "^1.8.0",
    "chai-http": "^4.3.0",
    "eslint": "^8.35.0",
    "eslint-plugin-mocha": "^10.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "mocha": "^10.2.0",
    "nock": "^13.3.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
